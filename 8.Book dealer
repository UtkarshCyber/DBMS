create database BOOK_DEALER;
use BOOK_DEALER;

create table author(
author_id integer(5) primary key,
auth_name varchar(25),
city varchar(25),
country varchar(10)
);

create table publisher(
publisher_id integer(5) primary key,
pub_name varchar(10),
city varchar(25),
country varchar(10)
);

create table catlog(
book_id integer(5) primary key,
title varchar(10),
author_id integer(5),
publisher_id integer(5),
category_id integer(5),
year integer(4),
price integer(6),
foreign key (author_id) references author(author_id) on update cascade,
foreign key (publisher_id) references publisher (publisher_id) on update cascade,
foreign key (category_id) references category(category_id) on update cascade
);

create table category(
category_id integer(5) primary key,
description varchar(50)
);


